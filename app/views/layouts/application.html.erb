<!DOCTYPE html>
<html>
  <head>
    <title>RainforestGroup</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% unless controller_name == "pages" %>
      <nav>
        <%= link_to 'Home', products_path %> | <%= link_to 'New Product', new_product_url %> |
        <span class="userinfo">
          <% if current_user %>
            Signed in as <%= current_user.email %> | <%= link_to 'Log Out', session_path("current"), :method => :delete %>
          <% else %>
            <%= link_to 'Login', new_session_path %> or <%= link_to 'Register', new_user_path %>
          <% end %>
        </span>
      </nav>
    <% end %>

    <% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
    <% end %>
    <% if flash[:alert] %>
      <p class="alert"><%= flash[:alert] %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
